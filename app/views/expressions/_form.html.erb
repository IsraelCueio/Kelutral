<%= form_with(model: expression) do |form| %>
  <% if expression.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expression.errors.count, "error") %> prohibited this expression from being saved:</h2>

      <ul>
        <% expression.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container mt-5" style="width:50vw; border-radius: 50px; box-shadow: 0px 10px 20px rgba(0,0,0,0.2); padding: 50px">
    <div class="row">
      <div class="col text-center">
        <h1>New expression</h1>
        <br>
      </div>
    </div>
    <div class="row">
      <div class="col-8">
        <label>Phrase:</label>
        <br>
        <input type="text" class="form-control" id="teste" onkeydown="GetValue(this.value,event,false)" onblur="GetValue(this.value,event,true)">
        <br>
      </div>
      <div class="col">
        <label>Difficulty</label>
        <br>
        <%= form.select :difficulty, Phrase.difficulties.keys,{}, {class: "form-select"} %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label for="fname">Phrase Translation:</label>
        <br>
        <%= form.text_field :translation,{class: "form-control"} %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center">
        <div>
          <%= form.hidden_field :name, id: 'new_words' %>
          <%= form.hidden_field :text, id: 'new_phrase' %>
        <div>
        <br>
        <%= form.submit class: "btn btn-primary", style: "width: 100%!important" %>
      </div>
    </div>
  </div>
<% end %>
<br>