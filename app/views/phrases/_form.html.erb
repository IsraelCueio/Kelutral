<%= form_with(model: phrase) do |form| %>
  <% if phrase.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(phrase.errors.count, "error") %> prohibited this phrase from being saved:</h2>

      <ul>
        <% phrase.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_field :text %>
  </div>

  <div>
    <%= form.label :difficulty, style: "display: block" %>
    <%= form.select :difficulty, Phrase.difficulties.keys,{}, {class: "form-select"} %>
  </div>

  <div>
    <%= form.label :audio, style: "display: block" %>
    <%= form.text_field :audio %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
